<%= simple_form_for(@performance_test_result) do |f| %>
  <%= f.error_notification %>
   <%= f.input :performance_test_id, :as => :hidden %>
   <%= f.input :date_run %>
   <%= f.input :build, :label => "Build Number", :hint => "Revision number only e.g. 3772" %>
  <div class="inputs">
	<p>
	<bold>Measure 1: <%= @performance_test.measure1name %></bold>
	</p>
    <%= f.input :measure1max, :label => "Measure 1 Max" %>
    <%= f.input :measure1min, :label => "Measure 1 Min"  %>
    <%= f.input :measure1avg, :label => "Measure 1 Avg"   %>
	<%= f.input :measure1median, :label => "Measure 1 Median" %>
    <%= f.input :measure1values, :label => "Measure 1 Values" %>
<% unless @performance_test.measure2name == nil or @performance_test.measure2name.strip == "" %>
	<p>
	<bold>Measure 2: <%= @performance_test.measure2name %></bold>
	</p>
    <%= f.input :measure2max, :label => "Measure 2 Max" %>
    <%= f.input :measure2min, :label => "Measure 2 Min" %>
    <%= f.input :measure2avg, :label => "Measure 2 Avg"    %>
	<%= f.input :measure2median, :label => "Measure 2 Median" %>
    <%= f.input :measure2values, :label => "Measure 2 Values" %>
<% end %>
<% unless @performance_test.measure3name == nil or @performance_test.measure3name.strip == "" %>
	<p>
	<bold>Measure 3: <%= @performance_test.measure3name %></bold>
	</p>
    <%= f.input :measure3max, :label => "Measure 3 Max" %>
    <%= f.input :measure3min, :label => "Measure 3 Min" %>
    <%= f.input :measure3avg, :label => "Measure 3 Avg"    %>
	<%= f.input :measure3median, :label => "Measure 3 Median" %>
    <%= f.input :measure3values, :label => "Measure 3 Values" %>
<% end %>
<% unless @performance_test.measure4name == nil or @performance_test.measure4name.strip == "" %>
	<p>
	<bold>Measure 4: <%= @performance_test.measure4name %></bold>
	</p>
    <%= f.input :measure4max, :label => "Measure 4 Max" %>
