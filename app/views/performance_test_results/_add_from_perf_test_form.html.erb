    <%= f.input :measure4avg, :label => "Measure 4 Avg"    %>
	<%= f.input :measure4median, :label => "Measure 4 Median" %>
    <%= f.input :measure4values, :label => "Measure 4 Values" %>
<% end %>
<% unless @performance_test.measure5name == nil or @performance_test.measure5name.strip == "" %>
	<p>
	<bold>Measure 5: <%= @performance_test.measure5name %></bold>
	</p>
    <%= f.input :measure5max, :label => "Measure 5 Max" %>
    <%= f.input :measure5min, :label => "Measure 5 Min" %>
  	<%= f.input :measure5avg, :label => "Measure 5 Avg"    %>
	<%= f.input :measure5median, :label => "Measure 5 Median" %>
    <%= f.input :measure5values, :label => "Measure 5 Values" %>
<% end %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
